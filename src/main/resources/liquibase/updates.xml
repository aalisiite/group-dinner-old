<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="create users table" author="alise">
        <createSequence sequenceName="user_seq"/>
        <createTable tableName="users">
            <column name="id" type="bigint" defaultValueSequenceNext="user_seq">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user"/>
            </column>
            <column name="first_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

    <changeSet id="create dinners table" author="alise">
        <createSequence sequenceName="dinner_seq"/>
        <createTable tableName="dinners">
            <column name="id" type="bigint" defaultValueSequenceNext="dinner_seq">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_dinner"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="creator_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="max_guests" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="current_guests" type="int">
                <constraints nullable="true"/>
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="location" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="date_time" type="timestamp without timezone">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="dinners"
                                 baseColumnNames="creator_id"
                                 constraintName="fk_dinners_creator_id_users_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
        />
    </changeSet>

    <changeSet id="create attendees table" author="alise">
        <createSequence sequenceName="attendee_seq"/>
        <createTable tableName="attendees">
            <column name="id" type="bigint" defaultValueSequenceNext="attendee_seq">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_attendee"/>
            </column>
            <column name="dinner_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="accepted" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="attendees"
                                 baseColumnNames="dinner_id"
                                 constraintName="fk_attendees_dinner_id_dinners_id"
                                 referencedTableName="dinners"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
        />
        <createIndex tableName="attendees" indexName="idx_attendees_dinner_id">
            <column name="dinner_id"/>
        </createIndex>
        <addForeignKeyConstraint baseTableName="attendees"
                                 baseColumnNames="user_id"
                                 constraintName="fk_attendees_user_id_users_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
        />
        <createIndex tableName="attendees" indexName="idx_attendee_dinner_id">
            <column name="dinner_id"/>
        </createIndex>
    </changeSet>


    <changeSet id="create feedbacks table" author="nikola">
        <createSequence sequenceName="feedback_seq"/>
        <createTable tableName="feedbacks">
            <column name="id" type="bigint" defaultValueSequenceNext="feedback_seq">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_feedback"/>
            </column>
            <column name="provider_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="receiver_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="rating" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="feedbacks"
                                 baseColumnNames="provider_id"
                                 constraintName="fk_feedbacks_provider_id_users_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
        />
        <createIndex tableName="feedbacks" indexName="idx_feedbacks_provider_id">
            <column name="provider_id"/>
        </createIndex>
        <addForeignKeyConstraint baseTableName="feedbacks"
                                 baseColumnNames="receiver_id"
                                 constraintName="fk_feedbacks_receiver_id_users_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
        />
    </changeSet>

</databaseChangeLog>